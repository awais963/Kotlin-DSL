<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.matech.kotlindsl.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.matech.kotlindsl.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_fullScreenDialogFragment"
            app:destination="@id/fullScreenDialogFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.matech.kotlindsl.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_testingFragment2"
            app:destination="@id/testingFragment2" />
    </fragment>
    <dialog
        android:id="@+id/fullScreenDialogFragment"
        android:name="com.matech.kotlindsl.ui.FullScreenDialogFragment"
        android:label="fragment_full_screen_dialog"
        tools:layout="@layout/fragment_full_screen_dialog" />
    <fragment
        android:id="@+id/testingFragment"
        android:name="com.matech.kotlindsl.ui.TestingFragment"
        android:label="fragment_testing"
        tools:layout="@layout/fragment_testing" />
    <fragment
        android:id="@+id/testingFragment2"
        android:name="com.matech.kotlindsl.ui.TestingFragment2"
        android:label="Testing 2"
        tools:layout="@layout/fragment_testing2" >
        <action
            android:id="@+id/action_testingFragment2_to_testingFragment"
            app:destination="@id/testingFragment" />
    </fragment>
</navigation>